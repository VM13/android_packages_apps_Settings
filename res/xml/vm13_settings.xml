<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/tweaks_title"
    settings:keywords="@string/keywords_vm13" >

         <PreferenceScreen android:key="vm12_logo"
                          android:enabled="false"
                          android:layout="@layout/vm13_logo_row" />
        <!-- VM13 -->
    <PreferenceCategory
        android:key="vm13"
        android:title="@string/vm13" >

    </PreferenceCategory>

    <PreferenceCategory
        android:key="power_key"
        android:title="@string/hardware_keys_power_key_title" >

        <PreferenceScreen
            android:key="power_menu"
            android:title="@string/power_menu_title"
            android:fragment="com.android.settings.cyanogenmod.PowerMenuActions" />

        <SwitchPreference
            android:key="power_end_call"
            android:title="@string/power_end_call_title"
            android:summary="@string/power_end_call_summary"
            android:persistent="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="headsup"
        android:title="@string/headsup_section_header" >

        <!-- Heads up -->
        <com.android.settings.cyanogenmod.GlobalSettingSwitchPreference
            android:key="heads_up_notifications_enabled"
            android:title="@string/heads_up_notifications"
            android:summaryOn="@string/summary_heads_up_enabled"
            android:summaryOff="@string/summary_heads_up_disabled" />

        <!-- Heads up button -->
        <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="heads_up_show_status_button"
            android:title="@string/show_headsup_button_title"
            android:summary="@string/show_headsup_button_summary"
            android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="show_su_indicator"	
        android:title="@string/su_indicator"	
        android:summary="@string/su_indicator_summary"	
        android:defaultValue="true" />

        <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="qs_use_four_columns"
            android:title="@string/qs_four_columns_title"
            android:defaultValue="false" />

        <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="sysui_qs_main_tiles"
            android:title="@string/qs_main_tiles_title"
            android:summaryOn="@string/qs_main_tiles_summary_on"
            android:summaryOff="@string/qs_main_tiles_summary_off"
            android:defaultValue="true" />

        <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="qs_show_brightness_slider"
            android:title="@string/qs_brightness_slider_title"
            android:summary="@string/qs_brightness_slider_summary"
            android:defaultValue="true"/>

        <com.android.settings.cyanogenmod.SecureSettingSwitchPreference
            android:key="quick_settings_vibrate"
            android:title="@string/quick_settings_vibrate_title"
            android:summary="@string/quick_settings_vibrate_summary"
            android:defaultValue="false"/>

    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="status_bar_quick_qs_pulldown"
        android:title="@string/status_bar_quick_qs_pulldown_title"
        android:summary="@string/status_bar_quick_qs_pulldown_summary"
        android:defaultValue="true" />

         <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="recents_full_screen"
            android:title="@string/recents_show_fullscreen"
            android:summaryOn="@string/recents_fullscreen_summary_enabled"
            android:summaryOff="@string/recents_fullscreen_summary_disabled"
            android:defaultValue="false" />

     <!-- Three-fingers-swipe to screenshot -->
    <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
        android:key="three_finger_gesture"
        android:title="@string/three_finger_gesture"
        android:summary="@string/three_finger_gesture_summary"
        android:defaultValue="false" />

   <PreferenceScreen
            android:key="lockscreen_colors"
            android:title="@string/lockscreen_colors"
            android:fragment="com.android.settings.vm13.LockscreenColors" />

    <!-- Clock widget -->
    <PreferenceScreen
         android:key="lock_clock"
         android:fragment="com.android.settings.vm13.LockClock"
         android:title="@string/lock_clock_title" />

     </PreferenceCategory>

        <!-- LockScreen Weather -->
        <PreferenceScreen
                android:key="lockscreen_weather"
                android:title="@string/lock_screen_weather_settings_title"
                android:fragment="com.android.settings.vm13.LockScreenWeatherSettings" 
                />

    <!-- System APP Remover -->
    <PreferenceScreen
            android:id="@+id/system_app_remover"
            android:title="@string/system_app_remover"
            android:fragment="com.android.settings.vm13.fragments.SystemappRemover" />

        <!-- Navbar Edits -->
        <PreferenceCategory
        android:key="navigation_bar_general_category"
        android:title="@string/navigation_bar_screen_title" >
        <ListPreference
            android:key="navigation_bar_height"
            android:dialogTitle="@string/navigation_bar_height"
            android:title="@string/navigation_bar_height"
            android:entries="@array/navigation_bar_height_entries"
            android:entryValues="@array/navigation_bar_height_values"
            android:defaultValue="48"
            android:persistent="false" />

    </PreferenceCategory>

        <!-- Google Settings -->
        <PreferenceScreen
            android:id="@+id/google_settings"
            android:icon="@drawable/ic_settings_google"
            android:title="@string/google_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.google.android.gms"
                android:targetClass="com.google.android.gms.app.settings.GoogleSettingsLink" />
        </PreferenceScreen>

        <!-- Wakelock blocker -->
        <PreferenceScreen
            android:key="wakelock_blocker"
            android:fragment="com.android.settings.vm13.WakeLockBlocker"
            android:title="@string/wakelock_blocker_title"
            android:icon="@drawable/ic_xd_wakelock" 
            />

        <!-- Status bar -->
        <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
                android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
                android:icon="@drawable/ic_settings_extdesk_hidenavbar"
                />

        <!-- SuperSU -->
        <PreferenceScreen
            android:id="@+id/supersu_settings"
            android:icon="@drawable/ic_settings_supersu"
            android:title="@string/supersu_title">
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="eu.chainfire.supersu"
                android:targetClass="eu.chainfire.supersu.MainActivity" />

         </PreferenceScreen>

</PreferenceScreen>
